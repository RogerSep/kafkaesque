{
  "name": "kafkaesque-ui",
  "description": "A kafka inspired message system for event-driven front-end applications.",
  "version": "1.0.5",
  "main": "index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "start": "webpack --watch",
    "test": "jest",
    "build": "npm-run-all --parallel build:*",
    "build:js": "webpack --output-filename kui.js",
    "build:js.min": "webpack --output-filename kui.min.js -p",
    "prebuild": "rimraf dist",
    "prestart": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RogerSep/kafkaesque-ui.git"
  },
  "keywords": [
    "message",
    "broker",
    "event",
    "driven",
    "application"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Roger Sep√∫lveda",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RogerSep/kafkaesque-ui/issues"
  },
  "homepage": "https://github.com/RogerSep/kafkaesque-ui#readme",
  "dependencies": {
    "data.either": "1.5.0",
    "ramda": "^0.23.0",
    "rx": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "19.2.2",
    "@types/ramda": "0.0.4",
    "@types/rx": "4.1.1",
    "jest": "^19.0.2",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "source-map-loader": "^0.1.6",
    "ts-jest": "^19.0.0",
    "ts-loader": "^2.0.1",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-fail-plugin": "^1.0.5"
  },
  "config": {},
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js"
  }
}
